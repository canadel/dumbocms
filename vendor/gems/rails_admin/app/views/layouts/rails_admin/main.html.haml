- if @abstract_model && @plugin_name
  - content_for :title do
    #{@abstract_model.pretty_name} | #{@plugin_name}
= render(:partial => 'layouts/rails_admin/head')
%body.rails_admin
  #container
    = render(:partial => 'layouts/rails_admin/header')
    #wrapper.wat-cf
      #main
        #content= yield
        #footer
          %p #{Rails.configuration.dumbocms.app} "#{Rails.configuration.dumbocms.codename}" v#{Rails.configuration.dumbocms.version} ("#{Rails.configuration.dumbocms.milestone}")
      = render :partial => "layouts/rails_admin/sidebar"
  = render(:partial => 'layouts/rails_admin/footer')
