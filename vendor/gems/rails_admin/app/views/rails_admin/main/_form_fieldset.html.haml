- if (fields = fieldset.fields.map{ |f| f.with(:form => form, :object => object, :view => self) }.select(&:visible)).length > 0
  %fieldset
    %legend= fieldset.label

    - if fieldset.help
      .help= fieldset.help

    - fields.each do |field|
      - if field.read_only
        = field_wrapper_for(form, field) do
          = field.pretty_value.presence || ' - '
      - else
        = field.render
